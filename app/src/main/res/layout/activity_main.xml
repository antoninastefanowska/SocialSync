<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".gui.activities.MainActivity">

    <data>
        <variable
            name="parentMainAdapter"
            type="com.antonina.socialsynchro.gui.adapters.ParentMainAdapter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_standard"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btAccounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="btAccounts_onClick"
                        android:text="Accounts"
                        style="@style/ButtonStyle" />

                    <Button
                        android:id="@+id/btCreateContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="btCreateContent_onClick"
                        android:text="Create content"
                        style="@style/ButtonStyle" />

                    <Button
                        android:id="@+id/btRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="btRefresh_onClick"
                        android:text="Refresh"
                        style="@style/ButtonStyle" />

                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMainParents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:adapter="@{parentMainAdapter}"
                android:padding="@dimen/padding_standard" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
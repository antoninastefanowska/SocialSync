<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".common.gui.activities.EditActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_main"
        style="@style/MainConstraintLayoutStyle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                style="@style/NavigationLayoutStyle">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_post"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/profile_picture_background_size"
                    android:layout_gravity="center_horizontal"
                    app:tabMode="scrollable" />

            </FrameLayout>

            <LinearLayout
                style="@style/MainLinearLayoutStyle"
                tools:ignore="MissingConstraints">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
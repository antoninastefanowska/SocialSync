<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".common.gui.activities.AccountsActivity"
    tools:showIn="@layout/activity_accounts">

    <data>
        <variable
            name="accountAdapter"
            type="com.antonina.socialsynchro.common.gui.adapters.AccountDisplayAdapter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_main"
        style="@style/MainConstraintLayoutStyle">

        <LinearLayout
            android:id="@+id/linear_layout_main"
            style="@style/MainLinearLayoutStyle"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                style="@style/ButtonsScrollViewStyle">

                <LinearLayout
                    style="@style/ButtonsScrollableLinearLayoutStyle">

                    <Button
                        android:id="@+id/button_add_account"
                        android:onClick="buttonAddAccount_onClick"
                        android:text="@string/add_account"
                        style="@style/ButtonStyle" />

                    <Button
                        android:id="@+id/button_remove_account"
                        android:onClick="buttonRemoveAccount_onClick"
                        android:text="@string/remove_account"
                        style="@style/ButtonStyle" />

                    <Button
                        android:id="@+id/button_synchronize_account"
                        android:onClick="buttonSynchronizeAccount_onClick"
                        android:text="@string/synchronize_account"
                        style="@style/ButtonStyle" />

                    <Button
                        android:id="@+id/button_check_limits"
                        android:onClick="buttonCheckLimits_onClick"
                        android:text="Check limits"
                        style="@style/ButtonStyle" />

                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_accounts"
                android:adapter="@{accountAdapter}"
                style="@style/RecyclerViewStyle" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="parent"
            type="com.antonina.socialsynchro.content.ParentPostContainer" />
        <variable
            name="childAdapter"
            type="com.antonina.socialsynchro.gui.adapters.ChildDisplayAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSecondary"
        android:padding="@dimen/padding_small"
        android:layout_margin="@dimen/margin_small">

        <TextView
            android:id="@+id/tvParentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{parent.title}"
            android:textColor="@color/colorBackground" />

        <TextView
            android:id="@+id/textview_parent_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{parent.content}"
            android:textColor="@color/colorBackground" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_main_children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:adapter="@{childAdapter}"
            android:padding="@dimen/padding_standard" />

    </LinearLayout>

</layout>
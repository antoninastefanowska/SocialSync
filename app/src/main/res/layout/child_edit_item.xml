<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import
            type="android.view.View" />
        <variable
            name="child"
            type="com.antonina.socialsynchro.common.content.posts.ChildPostContainer" />
        <variable
            name="attachmentAdapter"
            type="com.antonina.socialsynchro.common.gui.adapters.AttachmentEditAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontal_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_standard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_parent_add_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_attachment"
                    style="@style/ButtonStyle" />

                <Button
                    android:id="@+id/button_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock"
                    style="@style/ButtonStyle" />

                <Button
                    android:id="@+id/button_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish"
                    style="@style/ButtonStyle" />

                <Button
                    android:id="@+id/button_unpublish_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unpublish"
                    style="@style/ButtonStyle" />

            </LinearLayout>

        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_child_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={child.content}"
                android:enabled="@{!child.isLocked()}"
                tools:ignore="Autofill"
                style="@style/EditContentStyle" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_child_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={child.title}"
                    android:enabled="@{!child.isLocked()}"
                    android:background="@{child.service.panelBackground}"
                    android:textColor="@{child.service.fontColor}"
                    tools:ignore="Autofill"
                    style="@style/EditTitleStyle" />

                <include layout="@layout/layout_profile_picture" />

                <RelativeLayout
                    android:id="@+id/loading_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{child.isLoading() ? View.VISIBLE : View.GONE}"
                    style="@style/LoadingPanelStyle" >

                    <ProgressBar
                        android:layout_width="@dimen/progress_bar_size_small"
                        android:layout_height="@dimen/progress_bar_size_small"
                        android:indeterminate="true" />

                </RelativeLayout>

            </FrameLayout>

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_child_attachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:adapter="@{attachmentAdapter}" />

    </LinearLayout>

</layout>